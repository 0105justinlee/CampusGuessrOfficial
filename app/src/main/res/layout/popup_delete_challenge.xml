<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/popup_delete_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold|normal"
            android:text="Challenge Title"/>

        <TextView
            android:id="@+id/popup_delete_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="italic|normal"
            app:layout_constraintTop_toBottomOf="@+id/popup_delete_title"
            android:text="Challenge Description"/>

        <ImageButton
            android:id="@+id/popup_delete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="placeholder text"
            app:srcCompat="@drawable/temp_img"
            app:layout_constraintTop_toBottomOf="@+id/popup_delete_description"
            android:contentDescription="My Challenges" />

        <Button
            android:id="@+id/popup_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:backgroundTint="#d11a2a"
            android:textColor="#ffffff"
            android:text="Delete"/>
        <Button
            android:id="@+id/popup_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:backgroundTint="#999999"
            android:textColor="#ffffff"
            android:text="Cancel"/>
    </LinearLayout>

</RelativeLayout>
