<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/duplicate_detect_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="@string/duplicate_detect_may_exist"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_detect_textView1">

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="314dp"
            android:layout_height="225dp"
            android:layout_weight="1"
            android:rotation="90"
            app:srcCompat="@drawable/temp_img" />

        <ImageView
            android:id="@+id/actualPhoto"
            android:layout_width="314dp"
            android:layout_height="225dp"
            android:layout_weight="1"
            android:rotation="90"
            app:srcCompat="@drawable/temp_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/duplicate_detect_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/duplicate_detect_question"
        android:gravity="center"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_detect_textView2">

        <Button
            android:id="@+id/duplicate_detect_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duplicate_detect_textView2" />

        <Button
            android:id="@+id/duplicate_detect_button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="No"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/duplicate_detect_button_yes"
            app:layout_constraintTop_toBottomOf="@+id/duplicate_detect_textView2" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>